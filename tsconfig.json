{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "listEmittedFiles": true,
        "listFiles": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "src",
        "outDir": "dist",
        "removeComments": true,
        "strictNullChecks": true,
        "target": "es2017",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "jest"],
        "lib": ["es2017", "dom"]
    },
    "include": ["src"],
    "exclude": ["*.test.ts"]
}
